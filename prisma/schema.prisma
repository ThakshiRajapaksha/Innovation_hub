// prisma/schema.prisma

datasource db {
  provider = "mysql"  // Change to 'postgresql' if you're using PostgreSQL
  url      = env("DATABASE_URL")  // Connection URL from .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String
  createdAt DateTime  @default(now())

  projects  Project[] 
  comments  Comment[] // Add relation to comments
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  department  String
  imageUrl    String?  
  userId      Int
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id]) 
  comments    Comment[] // Add relation to comments
}

model Ad {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?  // Optional field for an ad image
  createdAt   DateTime @default(now())
}



model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  projectId Int
  userId    Int
  createdAt DateTime @default(now())

  project   Project @relation(fields: [projectId], references: [id]) // Fix relation
  user      User    @relation(fields: [userId], references: [id]) // Fix relation
}
